
@model IEnumerable<ims.Models.ImageVM>

<div class="row search">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="input-group">
            <input id="search-tag" type="text" class="form-control" placeholder="Search by tag">
            <span class="input-group-btn">
                <button class="btn btn-default" type="button">Go!</button>
            </span>
        </div>
    </div>
</div>
<div class="row tags">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        Popular tags: 
        <a class="btn btn-link btn-sm">fdsdf</a>
        <a class="btn btn-link btn-sm">fdsdf</a>
        <a class="btn btn-link btn-sm">fdsdf</a>
        <a class="btn btn-link btn-sm">fdsdf</a>
        <a class="btn btn-link btn-sm">fdsdf</a>
    </div>
</div>
<div class="row images">
    <div class="col-md-3 col-sm-4 col-xs-6">
        <a id="add-image" href="#" class="thumbnail" data-toggle="modal" data-target="#modal-add-image"> <img src="../../Content/Images/add_new-image.png" > </a>
    </div>
    <div data-pagination-current-number="@ViewBag.Pagination.CurrentPageNumber" data-pagination-count-pages="@ViewBag.Pagination.CountPages" id="show-images">
        @foreach (ims.Models.ImageVM image in ViewBag.Images)
        {
            <div class="col-md-3 col-sm-4 col-xs-6">
                <a href="#" class="thumbnail"> <img src="@image.Path" > </a>
            </div>
        }
    </div>
</div>


<div id="modal-add-image" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add new image</h4>
                
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="add-image-file">*Choose file</label>
                    <input type="file" id="add-image-file" accept="image/jpeg,image/jpg,image/png,image/tiff">
                    <button id="clone-add-image-file" class="btn btn-default btn-info">choose file</button>
                    <p id="error-adding-image" class="text-danger"></p>
                    <p class="help-block">allowed image formats: jpg, jpeg, png, bmp, tiff (max size: 3MB)</p>
                </div>
                <div class="form-group">
                    <label for="add-image-name">Name</label>
                    <input type="text" class="form-control" id="add-image-name" placeholder="Name" maxlength="50">
                    <p class="help-block">max length 50</p>
                </div>
                <div class="form-group">
                    <label for="add-image-description">Description</label>
                    <textarea class="form-control" id="add-image-description" rows="3" placeholder="Description" maxlength="200"></textarea>
                    <p class="help-block">max length 200</p>
                </div>
                <div class="form-group">
                    <label for="add-image-tag">*Tags</label>
                    <div class="form-control" rows="2" id="add-image-tag" placeholder="">
                        
                    </div>
                    <p class="help-block">max count 6</p>
                    <div class="row search search-tag">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="input-group">
                                <input id="search-image-tag" type="text" class="form-control" maxlength="10" placeholder="Type a tag">
                                <span class="input-group-btn">
                                    <button id="add-tag-in-container" class="btn btn-info" type="button">Add tag</button>
                                </span>
                               
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <p class="text-warning">* Required fielfs</p>
                <button type="button" class="btn btn-warning" data-dismiss="modal">Cancel</button>
                <button id="add-new-image" type="button" class="btn btn-success">Add</button>
            </div>
        </div>
    </div>
</div>

<div id="modal-error" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Error</h4>
            </div>
            <div class="modal-body">
                <p id="msg-modal-error"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->